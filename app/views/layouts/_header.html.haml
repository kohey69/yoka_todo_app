%nav.project-navbar.navbar.fixed-top.position-sticky.navbar-expand-sm.navbar-dark.bg-dark{"aria-label" => "Third navbar example"}
  .container-fluid.ps-4.pe-4
    = link_to 'YokaTodoApp', root_path, class: 'navbar-brand'
    %button.navbar-toggler{"aria-controls" => "project-toggle", "aria-expanded" => "false", "data-bs-target" => "#project-toggle", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #project-toggle.collapse.navbar-collapse
      %ul.navbar-nav
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#"}
            = @projects.first.name
          %ul.dropdown-menu
            - @projects.each do |project|
              %li
                %a.dropdown-item{:href => "#"}= project.name
            .dropdown-divider
            %li
              = link_to '新規プロジェクト', new_project_path, class: 'dropdown-item'
